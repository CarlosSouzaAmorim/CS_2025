{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "cppdbg",
      "request": "launch",
      "name": "Debug C/C++ Program",
      "program": "${workspaceFolder}/${input:executablePath}",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "preLaunchTask": "C/C++: gcc build active file"
    }
  ],
  "inputs": [
    {
      "id": "executablePath",
      "type": "promptString",
      "description": "Enter the relative path to the executable you want to debug (e.g., 22-04/lacos)"
    }
  ]
}